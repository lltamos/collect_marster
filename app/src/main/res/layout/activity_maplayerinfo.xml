<?xml version="1.0" encoding="utf-8"?>

<com.master.app.weight.WarrScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.master.ui.activity.map.MrLayerActivity">

        <include layout="@layout/toolbar_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginTop="8dp"
            android:background="@color/gay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="是否显示"
                android:textColor="#333333" />

            <View
                style="@style/line_style"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center"
                android:text="图层名称"
                android:textColor="#333333" />

            <View
                style="@style/line_style"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="显示比例尺"
                android:textColor="#333333" />
        </LinearLayout>

        <View style="@style/line_style"></View>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <com.master.app.weight.SearchListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@color/stand_backgroud"
                android:cacheColorHint="#00000000"
                android:divider="@null"
                android:drawSelectorOnTop="true"
                android:listSelector="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>
</com.master.app.weight.WarrScrollView>

